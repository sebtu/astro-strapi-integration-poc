---
import fetchApi from '@/lib/strapi';
import type Restaurant from '@/interfaces/restaurant';

const restaurants = await fetchApi<Restaurant[]>({
  endpoint: 'restaurants',
  wrappedByKey: 'data'
});
---
<section class="tracking-wide px-10 py-5">
  <h2 class="text-3xl mb-4 font-bold">Restauracje</h2>

  <ul class="list-none">
    {restaurants.map((restaurant: any) => (
      <li class="mb-4">
        <h3 class="text-xl mb-1 font-bold">{restaurant.name}</h3>
        <p class="mb-1"><i>{restaurant.Description}</i></p>
        <address class="whitespace-break-spaces">
        {restaurant.Address}
        </address>
      </li>
    ))}
  </ul>
</section>
